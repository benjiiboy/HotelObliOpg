<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HotelObliOpg"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:HotelObliOpg.ViewModel"
    x:Class="HotelObliOpg.OpretGuest"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <ViewModel:GuestViewModel/>
        </Grid.DataContext>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="247,523,0,0" VerticalAlignment="Top" Height="55" Width="575" Command="{Binding UpdateGuestCommand, Mode=TwoWay}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="247,157,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="22" Width="575"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="247,291,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="27" Width="575"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="247,415,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Height="35" Width="575"/>
    </Grid>
</Page>

<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HotelObliOpg"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:HotelObliOpg.ViewModel"
    x:Class="HotelObliOpg.MainPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.DataContext>
            <ViewModel:GuestViewModel/>
        </Grid.DataContext>
        <Button x:Name="button" Content="Opret Gæst" HorizontalAlignment="Left" Margin="645,388,0,0" VerticalAlignment="Top" Command="{Binding CreateGuestCommand}" Height="44" Width="159"/>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="302" Margin="77,52,0,0" VerticalAlignment="Top" Width="456" ItemsSource="{Binding GuestCollection, Mode=TwoWay}" SelectedItem="{Binding SelectedGuest, Mode=TwoWay}"/>
        <Button x:Name="button1" Content="Slet" HorizontalAlignment="Left" Margin="77,376,0,0" VerticalAlignment="Top" Command="{Binding DeleteGuestCommand, Mode=TwoWay}"/>
        <Button x:Name="button3" Content="Hent Gæst" HorizontalAlignment="Left" Margin="301,376,0,0" VerticalAlignment="Top" Command="{Binding GetGuestCommand, Mode=TwoWay}"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="645,95,0,0" TextWrapping="Wrap" Text="{Binding Guest_No, Mode=TwoWay}" VerticalAlignment="Top" PlaceholderText="Guest_No" Width="159"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="645,199,0,0" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay}" VerticalAlignment="Top" PlaceholderText="Name" Width="159"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="645,301,0,0" TextWrapping="Wrap" Text="{Binding Address, Mode=TwoWay}" VerticalAlignment="Top" PlaceholderText="Address" RenderTransformOrigin="0.47,0.192" Width="159"/>

    </Grid>
</Page>
